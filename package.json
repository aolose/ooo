{
	"name": "blog",
	"version": "0.0.2",
	"private": true,
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"update": "git pull && git submodule update --init --recursive --remote --merge && pnpm i",
		"preview": "pnpm i && pnpm run build && pnpm run cloudflare",
		"cloudflare": "wrangler dev",
		"test": "npm run test:e2e && npm run test:unit",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write .",
		"test:e2e": "playwright test",
		"test:unit": "vitest",
		"wasm": "wasm-pack build src/lib/utils-wasm --target web && wasm-pack build src/lib/utils-wasm --target nodejs --out-dir ./node "
	},
	"devDependencies": {
		"@cloudflare/workers-types": "^4.20240329.0",
		"@playwright/test": "^1.42.1",
		"@sveltejs/adapter-auto": "^3.2.0",
		"@sveltejs/kit": "^2.5.5",
		"@sveltejs/vite-plugin-svelte": "^3.0.2",
		"@types/eslint": "^8.56.6",
		"@typescript-eslint/eslint-plugin": "^7.1.1",
		"@typescript-eslint/parser": "^7.1.1",
		"@vitejs/plugin-basic-ssl": "^1.1.0",
		"eslint": "^8.57.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "2.36.0-next.10",
		"miniflare": "^3.20240320.1",
		"prettier": "^3.2.5",
		"prettier-plugin-svelte": "^3.2.2",
		"sass": "^1.72.0",
		"svelte": "5.0.0-next.73",
		"svelte-check": "^3.6.8",
		"tslib": "^2.6.2",
		"typescript": "^5.4.3",
		"vite": "^5.2.7",
		"vite-sveltekit-cf-ws": "./packages/sveltekit-cf-ws",
		"vitest": "^1.4.0",
		"@sveltejs/adapter-cloudflare": "^4.2.0",
		"wrangler": "^3.41.0"
	},
	"type": "module",
	"dependencies": {
		"cookie": "^0.6.0",
		"mime": "^4.0.1"
	}
}
